macro-def (shirt-size) {
  params {
    param (size) {
      type (Size)
      min (Required) max (One)
    }
  }
  content {
    title-card {
      title-area {
        halign (Center)
        slot2 {
          single-line {
            text {
              value ("#{value(size)}")
              style (Title_M)
            }
          }
        }
      }
    }
  }
}